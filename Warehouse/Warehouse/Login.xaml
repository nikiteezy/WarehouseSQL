<Window x:Class="Warehouse.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Image x:Name="loginBtn" HorizontalAlignment="Left" Height="432" VerticalAlignment="Top" Width="790" Source="/Resources/login.jpg" RenderTransformOrigin="0.104,0.2"/>
        <TextBox x:Name="TxtBoxLogin" HorizontalAlignment="Left" Margin="571,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Login" Height="25" FontFamily="Barlow Light" FontSize="16" Cursor="AppStarting"/>
        <PasswordBox x:Name="TxtBoxPas" HorizontalAlignment="Left" Margin="571,246,0,0" VerticalAlignment="Top" Width="120" Height="25" Cursor="" Password="00000" DragEnter="TxtBoxPas_DragEnter"/>
        <Button x:Name="LoginBtn" Content="Войти" HorizontalAlignment="Left" Margin="599,303,0,0" VerticalAlignment="Top" FontFamily="Barlow Light" FontSize="16" Background="#FFD7FF84" Height="34" Width="64" Click="Button_Click"/>
       

    </Grid>
</Window>
